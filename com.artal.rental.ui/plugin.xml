<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="Palette" name="Palette" schema="schema/Palette.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.artal.rental.ui.views"
            name="Rental Views">
      </category>
      <view
            category="com.artal.rental.ui.views"
            class="com.artal.rental.ui.views.RentalCustomerView"
            id="com.artal.rental.ui.views.RentalCustomerView"
            name="Customer View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.artal.rental.ui.RentalPerspective"
            id="com.artal.rental.ui.RentalPerspective"
            name="Rental Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.artal.rental.ui.pref.palettespref"
            class="com.artal.rental.ui.pref.RentalColorPreferences"
            id="com.artal.rental.ui.pref.colorprefpage"
            name="Default">
      </page>
      <page
            class="com.artal.rental.ui.pref.RentalPreferences"
            id="com.artal.rental.ui.pref.rentalpref"
            name="Rental">
      </page>
      <page
            category="com.artal.rental.ui.pref.rentalpref"
            class="com.artal.rental.ui.pref.PalettesPreferences"
            id="com.artal.rental.ui.pref.palettespref"
            name="Palettes">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.artal.rental.ui.pref.RentalPrefInit">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.artal.rental.ui.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.artal.rental.ui.cmds.SampleHandler"
            commandId="com.artal.rental.ui.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <command
               commandId="com.artal.rental.ui.commands.sampleCommand"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:com.artal.rental.ui.views.RentalAgencyView?after=additions">
         <command
               commandId="com.artal.rental.ui.commands.sampleCommand"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="menu:org.eclipse.ui.views.ResourceNavigator?after=additions">
         <command
               commandId="com.artal.rental.ui.commands.sampleCommand"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="com.artal.rental.ui.Palette">
      <Palette
            class="com.artal.rental.ui.palettes.DefaultPalette"
            id="com.artal.rental.ui.defaultPalette"
            name="Default">
      </Palette>
      <Palette
            class="com.artal.rental.ui.palettes.MochePalette"
            id="com.artal.rental.ui.MochePalette"
            name="Moche">
      </Palette>
   </extension>

</plugin>
